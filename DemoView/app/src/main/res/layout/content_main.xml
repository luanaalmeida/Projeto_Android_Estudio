<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="#f9f7f7">

    <TextView
        android:text="Testes"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ec533b"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:padding="5dp"
        />
    <Button
        android:backgroundTint="#a912f4"
        android:id="@+id/btnTextViewDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text View Demo!!!" />

    <Button
        android:text="Estados"
        android:id="@+id/btnDemoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1cf8cc" />

  <Button
      android:text="Imagem"
      android:id="@+id/bntimageButtonActivit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#f19f53" />

    <Button
        android:text="Check Box"
        android:id="@+id/bntCheckBoxTogglerButoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f90626" />
    <Button
        android:text="Imagem da Internet"
        android:id="@+id/bntProgressDialogDemoActivit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#53867b"/>

      <Button
        android:text="Alerta dialog"
        android:id="@+id/BntComentAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0c22ea"/>

    <Button
        android:text="Scroll View"
        android:id="@+id/BntScrollViewDemoActivit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b4e43b"/>

</LinearLayout>
